<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Mess.MessFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Mess QR"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <fragment
            android:id="@+id/mess_fr_qr"
            android:name="com.grobo.notifications.Mess.QRFragment"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp" />

        <LinearLayout
        android:id="@+id/ll_mess_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mess_menu"
        android:orientation="vertical"
        android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="6dp"
                android:text="Cancel meal:"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="You can cancel meal for minimum two days and only from next day onwards"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="12dp"
                    android:text="Select meal you want to cancel"
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/type_meal_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/colorAccent"
                    android:spinnerMode="dropdown" />

            </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
            android:id="@+id/days"
            android:visibility="gone"

        android:orientation="horizontal">

        <TextView
        android:id="@+id/meal_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
            android:layout_marginRight="10dp"
        android:text="Select number of days you want to cancel"
        android:textColor="@color/dark_gray"
        android:textSize="18sp" />

        <Spinner
        android:id="@+id/cancel_meal_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/colorAccent"
        android:spinnerMode="dialog" />

        </LinearLayout>

        <Button
        android:id="@+id/cancel_meal_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_style"
        android:backgroundTint="@color/colorAccent"
        android:text="Cancel"
        android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Mess Menu"
            android:layout_below="@id/mess_fr_qr"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:id="@+id/mess_menu"
            android:layout_height="200dp"
            android:layout_below="@id/mess_fr_qr"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/club_card_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/ll_mess_details"
            app:cardCornerRadius="4dp"
            android:padding="20dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cancelled_meals"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Cancelled Meals"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

</ScrollView>