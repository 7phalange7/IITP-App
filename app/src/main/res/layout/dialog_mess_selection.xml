<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/prompt"
    android:padding="16dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:text="Select the mess in which you are enrolled\nPlease choose correct mess. You need to contact administrator to change your mess selection.">

    </TextView>
    <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/radio_group1"
        android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/radio_button_mess_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BH1 Mess 1">


    </RadioButton>

    <RadioButton
        android:id="@+id/radio_button_mess_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BH1 Mess 2">


    </RadioButton>

    <RadioButton
        android:id="@+id/radio_button_mess_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Hostel Mess">


    </RadioButton>

    <RadioButton
        android:id="@+id/radio_button_mess_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Girls' hostel Mess">


    </RadioButton>
    </RadioGroup>

</LinearLayout>